@model MoviesVO
<form asp-action="Set">
    @if (Model != null)
    {
        @if (Model.srno > 0)
        {
            <h3>Update Record</h3>
        }
        else
        {
            <h3>Insert Record</h3>
        }
        <div class="row"></div>
        <input type="hidden" asp-for="@Model.srno" />
        <div class="col-md-4 col-sm-12 col-lg-3">
            <label for="@Model.mname">Movie Name</label>
            <input type="text" class="form-control" asp-for="@Model.mname" />
        </div>
        <div class="col-md-4 col-sm-12 col-lg-3">
            <label for="@Model.years">Year</label>
            <input type="number" class="form-control" asp-for="@Model.years" />
        </div>
        <div class="col-md-4 col-sm-12 col-lg-3">
            <label for="@Model.actor">Actor</label>
            <input type="text" class="form-control" asp-for="@Model.actor" />
        </div>
        <div class="col-md-4 col-sm-12 col-lg-3">
            <label for="@Model.actress">actress</label>
            <input type="text" class="form-control" asp-for="@Model.actress" />
        </div>
        <div class="col-md-4 col-sm-12 col-lg-3">
            <label for="Model.dname">director</label>
            <input type="text" class="form-control" asp-for="@Model.dname" />
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    }
</form>